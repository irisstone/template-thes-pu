@article{gradinaru_enphr_2008,
	title = {{eNpHR}: a {Natronomonas} halorhodopsin enhanced for optogenetic applications},
	volume = {36},
	issn = {1559-7113},
	shorttitle = {{eNpHR}},
	url = {https://doi.org/10.1007/s11068-008-9027-6},
