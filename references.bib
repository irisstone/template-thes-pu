	keywords = {adolescence, dopamine, novelty, nucleus accumbens, read, reward learning, social behavior, social interaction, social reward, voltammetry},
	pages = {296--307},
}

@article{robinson_frequency_2002,
	title = {Frequency of {Dopamine} {Concentration} {Transients} {Increases} in {Dorsal} and {Ventral} {Striatum} of {Male} {Rats} during {Introduction} of {Conspecifics}},
	volume = {22},
	copyright = {Copyright © 2002 Society for Neuroscience},
